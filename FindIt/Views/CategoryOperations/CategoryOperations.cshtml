@model FindIt.Models.ProductOperationsLists
@{
    ViewBag.Title = "Kategori İşlemleri";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}


<script>
    $(document).ready(function () {
        $("ul li").eq(1).addClass("active");
    });</script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#deleteSubCategoryWithCategory").change(function () {
            $.ajax({
                url: '/CategoryOperations/SubCategoriesByCategoryID',
                data: { categoryID: $(this).val() },
                dataType: "JSON",
                success: function (result) {
                    var subCategories = $("#deleteSubCategory");
                    subCategories.empty();
                    $.each(result, function (i, item) {
                        subCategories.append($("<option></option>").attr("value", item.Id)
                            .html(item.SubCategryName));
                    });
                }
            });
        });
    });
</script>
<script src="~/Scripts/CategoryOperations.js"></script>
<div class="col-md-6">
    <div class="card">
        <div class="header">
            <h4 class="title">Kategori İşlemleri</h4>
        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-3">
                    <label>Kategori Adı</label>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <input type="text" class="form-control" id="categoryName" name="categoryName" placeholder="Kategori Adı" value="" />
                        <label id="error" Font-Bold="True" ForeColor="Red" Visible="False"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <button id="categoryAdd" onclick="CategoryAdd()" Class="btn btn-success btn-fill pull-right">Ekle</button>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <label>Kategoriler</label>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.CategoryID, Model.Categories, new { @id = "deleteCategory", @class = "form-control" })
                        <label id="errorDelete" Font-Bold="True" style="color:red;margin-top:3px;">Bu kategoriye ait tüm alt kategoriler silinecektir.</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <button id="categoryDelete" onclick="CategoryDelete()" Class="btn btn-danger btn-fill pull-right">Sil</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="card">
        <div class="header">
            <h4 class="title">Alt Kategori İşlemleri</h4>
        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-3">
                    <label>Alt Kategori Adı</label>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <input type="text" id="subCategory" Class="form-control" placeholder="Alt Kategori adı giriniz." value="" />
                        <label id="subCategoryError" Visible="False" Font-Bold="True" ForeColor="Red"></label>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Kategori Adı</label>
                </div>
                <div class="col-md-5">
                    @Html.DropDownListFor(m => m.CategoryID, Model.Categories, new { @id = "addSubCategory", @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <button id="btnSubCategoryAdd" onclick="SubCategoryAdd()" class="btn btn-success btn-fill pull-right">Ekle</button>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <label>Kategori Adı</label>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.CategoryID, Model.Categories, new { @id = "deleteSubCategoryWithCategory", @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Alt Kategoriler</label>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.SubCategoryID, Model.SubCategories, new { @id = "deleteSubCategory", @class = "form-control" })
                        <label id="subCategoriesDeleteError" Visible="False" Font-Bold="True" ForeColor="Red"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <button id="btnSubCategoryDelete" onclick="SubCategoryDelete()" class="btn btn-danger btn-fill pull-right">Sil</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>


